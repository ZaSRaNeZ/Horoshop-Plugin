
{
    "manifest_version": 2,
 
    "name": "Create Category Horoshop",
    "description": "This tools may do your work with HOROSHOP more easly ",
    "version": "50.0",
 
    "browser_action": {
        "default_icon": "icon.png",
      
        "default_popup": "popup.html"
        
        
    
    },
   "content_scripts": [
   {
     "matches": ["*://*.horoshop.ua/edit*"],
     "js": ["submenuScript.js"]
   }
 ],
    
                          
    "permissions": [
        "activeTab",
        "unlimitedStorage",
        "notifications",
         "<all_urls>"
    ]
    
    
}